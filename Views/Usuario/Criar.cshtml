@using LinkHub.Enum
@model UsuarioModel

@{
    ViewData["Title"] = "Cadastrar usuário";
}

<!-- Estilos personalizados -->
<style>
    body {
        background-color: #f8f9fa;
        color: #212529;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #ffffff;
        padding: 30px;
        border: 1px solid #ced4da;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .form-title {
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        color: #6f42c1;
        margin-bottom: 30px;
    }

    .btn-purple {
        background-color: #7c3aed;
        border-color: #7c3aed;
        color: white;
    }

        .btn-purple:hover {
            background-color: #6b21a8;
            border-color: #6b21a8;
        }

    .form-control,
    .form-select {
        background-color: #fff;
        color: #212529;
        border: 1px solid #ced4da;
    }

        .form-control::placeholder {
            color: #6c757d;
        }

    .input-group-text {
        background-color: #e9ecef;
        border: 1px solid #ced4da;
        color: #495057;
    }
</style>

<!-- Conteúdo -->
<div class="text-center">

    <div class="form-container">
        <div class="form-title">Cadastro de Usuários</div>

        <form asp-controller="Usuario" asp-action="Criar" method="post">
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="nome" class="form-label">Nome</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="João" />
                        @Html.ValidationMessageFor(x => x.Nome)
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="sobrenome" class="form-label">Login</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" asp-for="Login" class="form-control" placeholder="Silva" />
                        @Html.ValidationMessageFor(x => x.Login)
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" asp-for="Email" class="form-control" placeholder="joao.silva@email.com" />
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>

            <div class="mb-3">
                <label for="telefone" class="form-label">Perfil</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <select asp-for="Perfil" class="form-control">
                        <option value="">Selecione</option>
                        <option value="@PerfilEnum.Administrador">Administrador</option>
                        <option value="@PerfilEnum.Gestor">Gestor</option>
                        <option value="@PerfilEnum.Supervisor">Supervisor</option>
                        <option value="@PerfilEnum.Usuario">Usuário</option>

                    </select>
                    @Html.ValidationMessageFor(x => x.Perfil)
                </div>
            </div>


            <div class="mb-3">
                <label for="email" class="form-label">Senha</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuário" />
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
            </div>


            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Salvar</button>
            <a class="btn btn-danger" asp-controller="Usuario" asp-action="Index"><i class="bi bi-x-lg"></i> Cancelar</a>
        </form>
    </div>
</div>