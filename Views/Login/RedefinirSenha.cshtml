@model RedefinirSenhaModel

@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Redefinir senha";
}

<br />

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">x</button>
        <i class="bi bi-bug"></i>
        @TempData["MensagemErro"]
    </div>

}

<div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-header p-5 pb-4 border-bottom-0">
                <h1 class="fw-bold mb-0 fs-2">Sign up for free</h1>

            </div>

            <div class="modal-body p-5 pt-0">
                <form class="" asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
                    <div class="form-floating mb-3">
                        <input type="text" asp-for="Login" class="form-control rounded-3" id="login" placeholder="Login">
                        <label for="login">Login</label>
                    </div>
                    @Html.ValidationMessageFor(x => x.Login)
                    <div class="form-floating mb-3">
                        <input type="teste" asp-for="Email" class="form-control rounded-3" id="email" placeholder="name@example.com">
                        <label for="email">Email</label>
                    </div>
                    @Html.ValidationMessageFor(x => x.Email)
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Redefinir senha</button>
                   
                </form>
            </div>
        </div>
    </div>
</div>